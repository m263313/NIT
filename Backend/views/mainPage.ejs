     <div class="modal fade" id="myModalCreateFolder" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">×</button>
          <h4><span class="glyphicon glyphicon-folder-open"></span> Створити директорію </h4>
        </div>
        <div class="modal-body">
          <form role="form" name="contact_form" onsubmit="return validate_form ( );">
            <div class="form-group">
              <label for="psw"><span class="glyphicon glyphicon-education"></span> Введіть назву предмету </label>
              <input type="text" class="form-control" id="name" placeholder="Введіть назву предмету">
            </div>
            <div class="form-group">
              <label for="usrname"><span class="glyphicon glyphicon-user"></span>Ваш логин:</label>
              <input type="text" pattern="^[a-zA-Z]+$" name="contact_name" class="form-control" id="usrname" placeholder="Введіть Ваш логін або ім'я">
            </div>
              
              
            <div class="form-group">
              <label for="usrname"><span class="glyphicon glyphicon-user"></span> Ваш e-mail </label>
              <input type="email" class="form-control" id="usremale" placeholder="Ваш email" autofocus required>
            </div>
              <button type="submit" class="btn btn-block">Створити папку 
                <span class="glyphicon glyphicon-ok"></span>
              </button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal">
            <span class="glyphicon glyphicon-remove"></span> Відмінити
          </button>
          <p>Need <a href="#">help?</a></p>
        </div>
      </div>
    </div>
  </div>

